<style lang="scss">
  main {
    z-index: 2;
    margin: auto;
    padding: 1rem;
    width: 2000px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    .title {
      padding: 1rem;
      text-align: center;
    }
    .logo {
      border-radius: 50%;
      opacity: 0.5;
      margin-top: 3rem;
    }
    .image_preview_container {
      /*
      mask-image: linear-gradient(
        to right,
        rgba(0, 0, 0, 1) 50%,
        transparent 100%
      );
      */
    }
    .image_preview {
      background-image: url('assets/logo.png');
    }
  }
  .astro-a {
    position: absolute;
    top: -32px;
    left: 50%;
    transform: translatex(-50%);
    width: 220px;
    height: auto;
    z-index: -1;
  }

  h1 {
    position: fixed;
    z-index: 1;
    font-size: 4rem;
    font-weight: 700;
    line-height: 1;
    text-align: center;
    margin-bottom: 1em;
    @media only screen and (max-width: 450px) {
      font-size: 30pt;
    }
  }
  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
    .background-logo {
      background: url('assets/logo.png');
      background-clip: text;
    }
  }
  .instructions {
    margin-bottom: 2rem;
    border: 1px solid rgba(var(--accent-light), 25%);
    background: linear-gradient(
      rgba(var(--accent-dark), 66%),
      rgba(var(--accent-dark), 33%)
    );
    padding: 1.5rem;
    border-radius: 8px;
  }
  .instructions code {
    font-size: 0.8em;
    font-weight: bold;
    background: rgba(var(--accent-light), 12%);
    color: rgb(var(--accent-light));
    border-radius: 4px;
    padding: 0.3em 0.4em;
  }
  .instructions strong {
    color: rgb(var(--accent-light));
  }
  .link-card-grid {
    position: relative;
    display: block;
    overflow: hidden;
    background-color: #13151a;
    z-index: 2;
    display: grid;
    margin-top: 10rem;
    grid-template-columns: repeat(auto-fit, minmax(48ch, 1fr));

    @media (width < 800px) {
      margin-top: 14rem;
    }

    @media (width < 600px) {
      margin-top: 18rem;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    }

    @media (width < 450px) {
      margin-top: 9rem;
      grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
    }

    gap: 2rem;
    padding: 0;
    iframe {
      @media (hover: hover) {
        transition: opacity 0.2s;
        opacity: 0.5;
        &:hover,
        &:active {
          opacity: 1;
        }
      }
    }
  }
</style>
